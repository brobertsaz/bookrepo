<%= button_to 'Add Teacher', new_teacher_path, method: :get %>
<table>
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Admin?</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.fullname %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.admin? %></td>
        <td><%= button_to 'Edit', edit_teacher_path(teacher), method: :get %></td>
        <td><%= button_to 'Delete', teacher_path(teacher), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>